{
    "name": "server",
    "version": "1.0.0",
    "description": "REST API server for the Touric app",
    "main": "server.js",
    "scripts": {
        "build": "rimraf dist && swc ./src ./config -d dist",
        "dev": "tsx watch ./src/server.ts watch ./config/**/* --project ./tsconfig.json",
        "start": "node dist/server.js NODE_ENV=production",
        "lint": "eslint ./src --ext .ts",
        "lint-fix": "eslint ./src --ext .ts --fix",
        "typecheck": "tsc --noEmit --project tsconfig.json",
        "format": "prettier --write ./src/**/*",
        "seed": "ts-node ./scripts/seed.ts -i"
    },
    "keywords": [],
    "author": "",
    "license": "ISC",
    "dependencies": {
        "bcryptjs": "^2.4.3",
        "chalk": "^4.1.2",
        "config": "^3.3.9",
        "cors": "^2.8.5",
        "dotenv": "^16.3.1",
        "express": "^4.18.2",
        "express-async-errors": "^3.1.1",
        "http-status": "^1.6.2",
        "jsonwebtoken": "^9.0.1",
        "lodash": "^4.17.21",
        "mongoose": "^7.3.2",
        "morgan": "^1.10.0",
        "ms": "^2.1.3",
        "nodemailer": "^6.9.3",
        "slugify": "^1.6.6",
        "validator": "^13.9.0",
        "zod": "^3.21.4"
    },
    "devDependencies": {
        "@swc/cli": "^0.1.62",
        "@swc/core": "^1.3.68",
        "@tsconfig/node18": "^18.2.0",
        "@types/bcryptjs": "^2.4.2",
        "@types/config": "^3.3.0",
        "@types/express": "^4.17.17",
        "@types/jsonwebtoken": "^9.0.2",
        "@types/lodash": "^4.14.195",
        "@types/morgan": "^1.9.4",
        "@types/ms": "^0.7.31",
        "@types/node": "^20.4.1",
        "@types/nodemailer": "^6.4.8",
        "@types/validator": "^13.7.17",
        "@typescript-eslint/eslint-plugin": "^5.61.0",
        "eslint": "^8.44.0",
        "eslint-config-prettier": "^8.8.0",
        "eslint-config-standard-with-typescript": "^36.0.0",
        "eslint-plugin-import": "^2.27.5",
        "eslint-plugin-n": "^15.7.0",
        "eslint-plugin-promise": "^6.1.1",
        "prettier": "^3.0.0",
        "rimraf": "^5.0.1",
        "ts-node": "^10.9.1",
        "tsx": "^3.12.7",
        "typescript": "^5.1.6",
        "winston": "^3.9.0"
    }
}
