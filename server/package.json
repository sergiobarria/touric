{
  "name": "server",
  "version": "1.0.0",
  "description": "Backend server API for the Touric app",
  "main": "server.js",
  "scripts": {
    "dev": "tsnd -r tsconfig-paths/register --respawn --transpile-only src/server.ts",
    "build": "rimraf dist && swc ./src -d dist",
    "start": "node dist/server.js NODE_ENV=production",
    "typecheck": "tsc --noEmit",
    "lint": "ts-standard",
    "lint:fix": "ts-standard --fix",
    "seed": "ts-node ./src/seed.ts --import"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "dependencies": {
    "chalk": "^4.1.2",
    "cors": "^2.8.5",
    "dotenv": "^16.0.3",
    "express": "^4.18.2",
    "express-async-handler": "^1.2.0",
    "http-status": "^1.6.2",
    "mongoose": "^7.0.0",
    "morgan": "^1.10.0",
    "slugify": "^1.6.5",
    "validator": "^13.9.0",
    "zod": "^3.21.1"
  },
  "devDependencies": {
    "@swc/cli": "^0.1.62",
    "@swc/core": "^1.3.37",
    "@tsconfig/node18": "^1.0.1",
    "@types/express": "^4.17.17",
    "@types/morgan": "^1.9.4",
    "@types/node": "^18.14.6",
    "@types/validator": "^13.7.13",
    "rimraf": "^4.3.0",
    "ts-node-dev": "^2.0.0",
    "ts-standard": "^12.0.2",
    "tsc-alias": "^1.8.2",
    "tsconfig-paths": "^4.1.2",
    "typescript": "^4.9.5",
    "winston": "^3.8.2"
  },
  "eslintConfig": {
    "ignorePatterns": [
      "node_modules/*",
      "dist/*",
      "dev-data/*"
    ],
    "parserOptions": {
      "project": "./server/tsconfig.json"
    },
    "extends": [
      "../node_modules/ts-standard/eslintrc.json"
    ]
  },
  "ts-standard": {
    "project": "./tsconfig.json"
  }
}
