{
    "name": "touric",
    "version": "1.0.0",
    "description": "Full-stack web application for a travel agency",
    "repository": "git@github.com:sergiobarria/touric.git",
    "author": "sergiobarria <email@gmail.com>",
    "license": "MIT",
    "private": true,
    "workspaces": [
        "server/"
    ],
    "scripts": {
        "dev-server": "npm run dev --prefix server",
        "dev": "concurrently \"npm run dev-server\"",
        "build-server": "npm run build --prefix server",
        "build": "npm run build-server",
        "start-server": "npm run start --prefix server",
        "start": "concurrently \"npm run start-server\"",
        "lint-server": "npm run lint --prefix server",
        "lint": "yarn lint-server",
        "typecheck-server": "npm run typecheck --prefix server",
        "typecheck": "npm run typecheck-server",
        "format-server": "npm run format --prefix server",
        "format": "npm run format-server",
        "generate": "npm run generate --prefix server",
        "lint-staged": "lint-staged",
        "seed": "npm run seed --prefix server",
        "all": "npm run lint && npm run typecheck && npm run format",
        "studio": "npm run studio --prefix server",
        "prepare": "husky install"
    },
    "devDependencies": {
        "concurrently": "^8.0.1",
        "husky": "^8.0.3",
        "lint-staged": "^13.2.1"
    },
    "lint-staged": {
        "server/**/*.{ts,tsx}": [
            "npm run lint",
            "npm run format"
        ]
    }
}
