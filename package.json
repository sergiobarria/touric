{
    "name": "touric",
    "version": "1.0.0",
    "description": "Full-stack web application for a travel agency",
    "repository": "git@github.com:sergiobarria/touric.git",
    "author": "sergiobarria <email@gmail.com>",
    "license": "MIT",
    "private": true,
    "workspaces": [
        "server/"
    ],
    "scripts": {
        "dev:server": "yarn --cwd server dev",
        "dev": "concurrently \"yarn dev:server\"",
        "build:server": "yarn --cwd server build",
        "build": "yarn build:server",
        "start:server": "yarn --cwd server start",
        "start": "yarn start:server",
        "lint:server": "yarn --cwd server lint",
        "lint": "yarn lint:server",
        "typecheck:server": "tsc --noEmit --project server/tsconfig.json",
        "typecheck": "yarn typecheck:server",
        "format:server": "yarn --cwd server format",
        "format": "yarn format:server",
        "generate": "yarn --cwd server generate",
        "lint-staged": "lint-staged",
        "seed": "yarn --cwd server seed",
        "all": "yarn typecheck && yarn lint && yarn format",
        "prepare": "husky install"
    },
    "devDependencies": {
        "concurrently": "^8.0.1",
        "husky": "^8.0.3",
        "lint-staged": "^13.2.1"
    },
    "lint-staged": {
        "server/**/*.{ts,tsx}": [
            "yarn lint",
            "yarn format"
        ]
    }
}
