{
  "name": "touric",
  "version": "1.0.0",
  "description": "Full-stack tourism app built with the MERN stack",
  "main": "index.js",
  "author": "Sergio Barria",
  "license": "MIT",
  "scripts": {
    "client": "yarn --cwd client dev",
    "server": "yarn --cwd server watch",
    "install:client": "cd client && yarn",
    "install:server": "cd server && yarn",
    "install": "yarn install:client && yarn install:server",
    "dev": "concurrently \"yarn client\" \"yarn server\"",
    "typescript": "cd client && yarn tsc",
    "lint": "eslint '**/*.{js,tsx,ts,tsx}'",
    "lint-staged": "lint-staged",
    "prepare": "husky install",
    "pre-commit": "yarn lint-staged && yarn typescript"
  },
  "dependencies": {},
  "devDependencies": {
    "@typescript-eslint/eslint-plugin": "^5.10.0",
    "@typescript-eslint/parser": "^5.10.0",
    "concurrently": "^7.0.0",
    "cz-conventional-changelog": "3.3.0",
    "eslint": "^8.7.0",
    "eslint-config-airbnb": "^19.0.4",
    "eslint-config-prettier": "^8.3.0",
    "eslint-plugin-import": "^2.25.4",
    "eslint-plugin-jsx-a11y": "^6.5.1",
    "eslint-plugin-react": "^7.28.0",
    "eslint-plugin-react-hooks": "^4.3.0",
    "husky": "^7.0.4",
    "lint-staged": "^12.2.2",
    "prettier": "^2.5.1",
    "tsc-files": "^1.1.3",
    "typescript": "^4.5.5"
  },
  "lint-staged": {
    "**/*.{js,jsx,ts,tsx}": [
      "eslint --max-warnings=0",
      "yarn prettier --write"
    ]
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  }
}
